<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/day_view"
            android:layout_width="@dimen/toolbar_item_width"
            android:layout_height="@dimen/toolbar_item_width"
            android:padding="@dimen/toolbar_item_padding"
            android:src="@drawable/icon_day" />

        <ImageView
            android:id="@+id/week_view"
            android:layout_width="@dimen/toolbar_item_width"
            android:layout_height="@dimen/toolbar_item_width"
            android:padding="@dimen/toolbar_item_padding"
            android:src="@drawable/icon_week" />

        <ImageView
            android:id="@+id/month_view"
            android:layout_width="@dimen/toolbar_item_width"
            android:layout_height="@dimen/toolbar_item_width"
            android:padding="@dimen/toolbar_item_padding"
            android:src="@drawable/icon_month" />
    </LinearLayout>
</LinearLayout>