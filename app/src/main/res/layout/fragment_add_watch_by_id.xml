<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lc_layout_default_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/watch_id_et"
        style="@style/EditTextTypeStyle4"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:layout_marginTop="80.0dip"
        android:hint="@string/watch_device_add_watch_id_hint"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/help_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hb_icon_help_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:text="@string/watch_device_add_watch_id_tip1" />
    </LinearLayout>

    <Button
        android:id="@+id/add_view"
        android:layout_width="240.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/btn_bg3"
        android:text="@string/watch_device_add_watch_id_add"
        android:textSize="18.0sp" />
</LinearLayout>