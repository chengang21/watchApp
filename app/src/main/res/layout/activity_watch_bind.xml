<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lc_layout_default_bg"
    android:orientation="vertical">

    <com.duoker.watch.ui.view.MyToolbar
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/colorToolbar_bg" >

        <ImageView
            android:id="@+id/toolbar_menu_back"
            android:layout_width="@dimen/toolbar_item_width"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/toolbar_item_padding"
            android:src="@drawable/icon_back" />

        <TextView
            style="@style/ToolbarStyle1.TitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unbind_watch_manage_title" />
    </com.duoker.watch.ui.view.MyToolbar>

    <com.duoker.watch.ui.layout.SlidingLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:background_view="@layout/view_bg"
        app:sliding_mode="both">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/separator_line" />

                <RelativeLayout
                    android:id="@+id/unbind_self_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/menu_item_height"
                    android:background="@drawable/layout_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6.0dip"
                        android:gravity="center"
                        android:paddingLeft="14.0dip"
                        android:paddingRight="14.0dip"
                        android:text="@string/unbind_watch_manage_unbind_self"
                        android:textColor="#ff515050"
                        android:textSize="18.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/menu_item_right1"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/separator_line" />

                <RelativeLayout
                    android:id="@+id/unbind_other_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/menu_item_height"
                    android:background="@drawable/layout_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6.0dip"
                        android:gravity="center"
                        android:paddingLeft="14.0dip"
                        android:paddingRight="14.0dip"
                        android:text="@string/unbind_watch_manage_unbind_other"
                        android:textColor="#ff515050"
                        android:textSize="18.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/menu_item_right1"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/separator_line" />

                <RelativeLayout
                    android:id="@+id/unbind_transfer_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/menu_item_height"
                    android:background="@drawable/layout_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6.0dip"
                        android:gravity="center"
                        android:paddingLeft="14.0dip"
                        android:paddingRight="14.0dip"
                        android:text="@string/unbind_watch_manage_unbind_transfer"
                        android:textColor="#ff515050"
                        android:textSize="18.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/menu_item_right1"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/separator_line" />

                <RelativeLayout
                    android:id="@+id/unbind_self_n_factory_setting_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/menu_item_height"
                    android:background="@drawable/layout_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6.0dip"
                        android:gravity="center"
                        android:paddingLeft="14.0dip"
                        android:paddingRight="14.0dip"
                        android:text="@string/unbind_watch_manage_unbind_self_n_factory_setting"
                        android:textColor="#ff515050"
                        android:textSize="18.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/menu_item_right1"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/separator_line" />
            </LinearLayout>
        </ScrollView>
    </com.duoker.watch.ui.layout.SlidingLayout>
</LinearLayout>