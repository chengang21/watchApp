<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/separator_line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="#ffffffff"
        android:paddingLeft="14.0dip">

        <EditText
            android:id="@+id/content_et"
            style="@style/EditTextTypeStyle4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="54.0dip"
            android:gravity="center_vertical"
            android:hint="@string/schedule_create_tip3"
            android:paddingLeft="0.0dip"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/change_speech_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/hb_record" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="14.0dip"
        android:background="@color/separator_line" />

    <LinearLayout
        android:id="@+id/choose_date_time_layout"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@drawable/layout_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14.0dip">

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/hb_icon_tixing" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/no_repeat_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.0dip"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/no_repeat_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/repeat_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18.0sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/icon_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="14.0dip"
        android:background="@color/separator_line" />

    <LinearLayout
        android:id="@+id/repeat_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="60.0dip"
        android:orientation="horizontal"
        android:paddingLeft="14.0dip">

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/hb_icon_repeat" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/schedule_create_tip4"
                android:textSize="18.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="20.0dip"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/repeat_tv"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="18.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text=""
                android:textSize="18.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="14.0dip"
        android:background="@color/separator_line" />

    <RelativeLayout
        android:id="@+id/give_up_layout"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@drawable/layout_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/schedule_create_tip5"
            android:textColor="#ffff9254"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/separator_line" />
</LinearLayout>